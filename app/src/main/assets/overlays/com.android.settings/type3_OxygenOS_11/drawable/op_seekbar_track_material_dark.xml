<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@*android:id/background">
        <shape android:tint="@null" android:shape="rectangle">
            <size android:height="1.5dip" />
            <solid android:color="@*android:color/background_holo_dark" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@*android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@*android:color/transparent" />
                <item>
                    <shape android:tint="@null" android:shape="rectangle">
                        <size android:height="1.5dip" />
                        <solid android:color="@null" />
                        <corners android:radius="2.0dip" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@*android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@*android:color/transparent" />
                <item>
                    <shape android:tint="@null" android:shape="rectangle">
                        <size android:height="1.5dip" />
                        <gradient android:startColor="@*android:color/accent_material_dark" android:endColor="@*android:color/accent_material_dark" android:angle="0.0" />
                        <corners android:radius="2.0dip" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>