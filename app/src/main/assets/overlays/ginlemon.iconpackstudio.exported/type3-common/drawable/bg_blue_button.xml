<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@*android:color/ripple_material_dark" />
            <corners android:radius="24.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#00ff00" />
            <corners android:radius="24.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@*android:color/background_dark" />
			<stroke android:width="1.5dip" android:color="@*android:color/accent_material_dark"/>
            <corners android:radius="24.0dip" />
        </shape>
    </item>
</selector>