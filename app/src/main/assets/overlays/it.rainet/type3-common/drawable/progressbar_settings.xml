<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@*android:id/background">
        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="@*android:color/background_leanback_dark" />
        </shape>
    </item>
    <item android:id="@*android:id/progress">
        <scale android:scaleWidth="98%">
            <shape>
                <corners android:topLeftRadius="4.0dip" android:bottomLeftRadius="4.0dip" />
                <solid android:color="@*android:color/accent_material_dark" />
            </shape>
        </scale>
    </item>
    <item android:id="@*android:id/secondaryProgress">
        <scale android:scaleWidth="98%">
            <shape>
                <corners android:topLeftRadius="4.0dip" android:bottomLeftRadius="4.0dip" />
                <solid android:color="@*android:color/darker_gray" />
            </shape>
        </scale>
    </item>
</layer-list>